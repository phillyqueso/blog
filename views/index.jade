header
  a(href='/') #{config.blogName}
  - if (typeof username !== "undefined")
    /
    a(id='userView', href='#{username}', title='#{username}')= username
#content
  != partial('login')
  #newPost(style='display:none;')
    form#newPostForm
      fieldset
        legend Add Post
        ul
          li
            label Title
              input#title(type='text', name='title')
          li
            - if (config.commentsToggle)
                #commentsToggle
                    label(for='commentsToggle') Comments?
                    input#commentBool(type='checkbox', name='commentsToggle', value=true, CHECKED)
            label(for='story') Story
            textarea#story(name='story', cols='80', rows='10')
          li
            input#postSubmit(type='submit', value='Submit')
#blog
footer #{config.blogFooter}
script(src='socket.io/socket.io.js')
script(src='js/blogClient.js')